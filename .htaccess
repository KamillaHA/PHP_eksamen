RewriteEngine On

# 1) Servér eksisterende filer og mapper direkte (CSS, JS, billeder osv.)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 2) Hvis der findes en tilsvarende .php-fil, så brug den (pæne URL'er)
#    - Undgår at ramme "index" osv. med punktum
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^.]+?)/?$ $1.php [NC,L]

# 3) ALT andet går til index.php (router)
RewriteRule ^ index.php [L]
